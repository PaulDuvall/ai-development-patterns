      "id": "DEC-001",
      "timestamp": "2024-01-15T10:30:00Z",
      "decision": "Use RS256 for JWT signing instead of HS256",
      "rationale": "Asymmetric keys enable better key rotation without redistributing secrets to all services. Public key can be freely shared for verification.",
      "alternatives": [
        {
          "option": "HS256 symmetric signing",
          "rejected_reason": "Requires secret sharing across all services, complicates key rotation"
        },
        {
          "option": "Full OAuth2 implementation",
          "rejected_reason": "Over-engineered for current requirements, adds unnecessary complexity"
        }
      ],
      "impact": {
        "components": ["auth-service", "api-gateway", "all-resource-servers"],
        "scope": "high",
        "breaking_change": false
      },
      "consequences": {
        "positive": [
          "Better security posture",
          "Easier key rotation process",
          "Simpler service onboarding (only need public key)"
        ],
        "negative": [
          "More complex key management infrastructure",
          "Marginally slower verification (negligible at current scale)"
        ]
      },
      "status": "accepted",
      "authors": ["team-consensus"],
      "related_documents": [
        "NOTES.md#session-2024-01-15",
        "specs/jwt-auth-spec.md"
      ],
      "tags": ["security", "authentication", "architecture"]
    },
